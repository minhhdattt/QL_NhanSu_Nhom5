<table id="table_id"
       class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>
                Họ tên ứng viên
            </th>
            <th>
                Phòng ban
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Ngày nộp
            </th>
            <th>
                Kết quả
            </th>
            <th>
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSoUngVien.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuyetDinhTD.PhongBan.TenPhongBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuyetDinhTD.ChucVu.TenChucVu)
                </td>
                <td>
                    @item.NgayNop.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trangthai)
                </td>
                <td>
                    <a>
                        @Html.ActionLink("Chi tiết", "ChitietHoSo", new { id = item.MaQD, id2 = item.MaUV })
                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').dataTable();
        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.js"></script>

}
