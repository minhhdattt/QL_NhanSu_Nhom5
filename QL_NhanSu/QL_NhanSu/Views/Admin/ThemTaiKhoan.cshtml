@model QL_NhanSu.Models.QuanLy

@{
    ViewBag.Title = "Thêm tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Thêm tài khoản mới</h1>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-3">Username: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Mật khẩu: </label>
            <div class="col-md-6">
                <input type="password" name="Matkhau" />
                @ViewData["Loi"]
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Nhập lại mật khẩu: </label>
            <div class="col-md-6">
                <input type="password" name="Matkhaunhaplai" />
                @ViewData["Loi1"]
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Mô tả: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Là tài khoản admin: </label>
            <div class="col-md-6">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsAdmin)
                    @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Loại truy cập: </label>
            <div class="col-md-6">
                <select class="form-control" name="Loai">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Email: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Điện thoại: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Tạo tài khoản" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về trang quản lý tài khoản", "QuanLy")
</div>
