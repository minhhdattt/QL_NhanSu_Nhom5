
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Đặng nhập vào trang quản lý</title>
    <meta charset="UTF-8" />
    <meta name="Designer" content="PremiumPixels.com">
    <meta name="Author" content="$hekh@r d-Ziner, CSSJUNTION.com">
    <link href="~/Content/structure.css" rel="stylesheet" />
    <link href="~/Content/reset.css" rel="stylesheet" />
</head>
<body>
    <div class="box login">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
            <fieldset class="boxBody">
                <label>Username</label>
                <input type="text" name="username" tabindex="1" placeholder="Username..." />
                @ViewData["Loi1"]
                <label><a href="#" class="rLink" tabindex="5">Forget your password?</a>Password</label>
                <input type="password" name="password" tabindex="2" placeholder="Password">
                @ViewData["Loi2"]
            </fieldset>
            <footer>
                <label><input type="checkbox" tabindex="3">Keep me logged in</label>
                <input type="submit" class="btnLogin" value="Login" tabindex="4">
            </footer>
        }
    </div>
</body>
</html>
