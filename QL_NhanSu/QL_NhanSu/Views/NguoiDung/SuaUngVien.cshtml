@model QL_NhanSu.Models.HoSoUngVien

@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="sidebar" style="float:left; margin-left:0;">
    <div class="box">
        <h3>Chào @ViewBag.Taikhoan</h3>
        <ul class="list">
            <li>
                <a href="/NguoiDung/ChitietUV/@ViewBag.MaUV">Thông tin tài khoản</a>
            </li>
            <li>
                <a href="/NguoiDung/DanhSachQD/@ViewBag.MaUV">Quyết định đã nộp</a>
            </li>
            <li>
                <a href="/NguoiDung/DoiMatKhau/@ViewBag.Taikhoan">Đổi mật khẩu</a>
            </li>
            <li>
                <a href="@Url.Action("DangXuat", "NguoiDung")">Đăng xuất</a>
            </li>
        </ul>
    </div>
</div>
<div style="margin-left:230px">
    <h2 style="text-align:center;">Sửa thông tin</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaUV)

            <div class="form-group">
                <label class="control-label col-md-4">Họ tên: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Giới tính: </label>
                <div class="col-md-8">
                    <select class="form-control" name="Gioitinh">
                        <option hidden>@Model.GioiTinh</option>
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Ngày sinh: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">CMND: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Địa chỉ: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Điện thoại: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Email: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Trình độ học vấn: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TrinhDoHocVan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrinhDoHocVan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Tình trạng sức khỏe: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TinhTrangSucKhoe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TinhTrangSucKhoe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Ngoại ngữ: </label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NgoaiNgu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgoaiNgu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="text-align:center">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        <a href="/NguoiDung/ChitietUV/@ViewBag.MaUV">Trở về</a>
    </div>
</div>
