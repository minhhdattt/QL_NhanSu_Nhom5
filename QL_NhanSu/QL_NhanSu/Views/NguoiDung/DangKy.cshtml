@using QL_NhanSu.Models
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<table align="center" style="margin-left:300px;">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên: </td>
            <td>
                @Html.TextBox("HoTen")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("Username")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại: </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi4"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Giới tính: </td>
            <td>
                <div class="form-group">
                    <select class="form-control" name="Gioitinh">
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                </div>
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh: </td>
            <td>
                <input type="date" name="Ngaysinh" />
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>CMND: </td>
            <td>
                @Html.TextBox("CMND")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ: </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi8"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Số điện thoại: </td>
            <td>
                @Html.TextBox("SDT")
                @ViewData["Loi9"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi10"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Trình độ học vấn: </td>
            <td>
                @Html.TextBox("Hocvan")
                @ViewData["Loi11"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tình trạng sức khỏe: </td>
            <td>
                @Html.TextBox("Suckhoe")
                @ViewData["Loi12"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngoại ngữ: </td>
            <td>
                @Html.TextBox("Ngoaingu")
                @ViewData["Loi13"]
            </td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>
