
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<h3 style="text-align:center">ĐĂNG NHẬP</h3>
<table align="center" style="margin-left:300px">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("Username")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>@Html.ActionLink("Chưa có tài khoản? Đăng ký ngay!", "DangKy", "Nguoidung")</td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>


