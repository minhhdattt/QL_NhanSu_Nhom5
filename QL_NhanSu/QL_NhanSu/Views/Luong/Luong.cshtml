@model IEnumerable<QL_NhanSu.Models.Luong>

@{
    ViewBag.Title = "Luong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="col-lg-12">
        <h1 class="page-header">Lương nhân viên</h1>
    </div>
}
<br />

<div class="row">
    @using (@Html.BeginForm("Luong", "Luong", FormMethod.Get))
    {
        <div class="col-md-5 ">
            <div class="input-group">
                <input type="text" name="Month" class="form-control" placeholder="Nhập tháng..." value="@ViewBag.Thang" />
                <input type="text" name="Year" class="form-control" placeholder="Nhập năm..." value="@ViewBag.Nam" />
                <input type="text" name="NV" class="form-control" placeholder="Nhập mã nhân viên (nếu có)..." value="@ViewBag.MaNV" />
                <span class="input-group-addon"><button type="submit"><i class="fa fa-check" aria-hidden="false"></i></button></span>
            </div>
        </div>
    }
</div>
<br />
<table id="table_id"
       class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>
                Nhân viên
            </th>
            <th>
                Tháng
            </th>
            <th>
                Lương
            </th>
            <th>
                Tình trạng
            </th>
            <th>
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                </td>
                <td>
                    @item.Thang/@item.Nam
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaTri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhTrang)
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "ChitietLuong", new { id = item.MaLuong })
                    <i class="fa fa-info-circle" aria-hidden="true"></i>|
                    @*@Html.ActionLink("Xóa", "XoaLuong", new { id = item.MaLuong })*@
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').dataTable();
        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.js"></script>

}
@section css
{
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet"
          href="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.css">

}
