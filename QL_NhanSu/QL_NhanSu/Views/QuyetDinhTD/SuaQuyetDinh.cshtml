@model QL_NhanSu.Models.QuyetDinhTD

@{
    ViewBag.Title = "Sửa quyết định";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Sửa quyết định</h1>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaQD)

        <div class="form-group">
            <label class="control-label col-md-3">Mã quyết định: </label>
            <div class="col-md-6">
                @Model.MaQD
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Mô tả: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Số lượng: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Về trang quản lý chức vụ", "QuyetDinhTD")
</div>
