@using QL_NhanSu.Models
@model QL_NhanSu.Models.QuyetDinhTD

@{
    ViewBag.Title = "Thêm quyết định mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Thêm quyết định mới</h1>
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3">Phòng ban: </label>
            <div class="col-md-6">
                @Html.DropDownList("MaPB")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Chức vụ: </label>
            <div class="col-md-6">
                @Html.DropDownList("MaCV")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Mô tả:  </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Sô lượng:  </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Thêm quyết định" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Về trang quản lý quyết định", "QuyetDinhTD")
</div>