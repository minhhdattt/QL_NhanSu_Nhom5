@model QL_NhanSu.Models.KT_KL

@{
    ViewBag.Title = "Thêm Khen thưởng - Kỷ luật mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Thêm Khen thưởng - Kỷ luật mới</h1>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3">Nhân viên: </label>
            <div class="col-md-6">
                @Html.DropDownList("MaNV")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Loại: </label>
            <div class="col-md-6">
                <select class="form-control" name="Loai">
                    <option>Khen thưởng</option>
                    <option>Kỷ luật</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Nội dung:  </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Giá trị:  </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.GiaTri, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Về trang quản lý khen thưởng - kỷ luật", "KTKL")
</div>
