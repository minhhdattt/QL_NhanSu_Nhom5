@model QL_NhanSu.Models.KT_KL

@{
    ViewBag.Title = "Xóa khen thưởng - kỷ luật";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1> Xóa khen thưởng - kỷ luật</h1>
    </div>
}


<h3>Bạn có chắc chắn muốn xóa @Model.Loai này</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã KT-KL:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKT_KL)
        </dd>

        <dt>
            Nhân viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhanVien.MaNV)
        </dd>

        <dt>
            Loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai)
        </dd>

        <dt>
            Nội dung:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Ngày:
        </dt>

        <dd>
            @Model.Ngay.ToShortDateString()
        </dd>

        <dt>
            Giá trị:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GiaTri) VNĐ
        </dd>

        <dt>
            Trạng thái: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Về trang quản lý khen thưởng - kỷ luật", "KTKL")
        </div>
    }
</div>
