@model IEnumerable<QL_NhanSu.Models.ChucVu>

@{
    ViewBag.Title = "Quản lý Chức vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="col-lg-12">
        <h1 class="page-header">Chức vụ</h1>
    </div>
}
<br />

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Tạo mới", "ThemCVmoi", "ChucVu", new { @class = "btn btn-primary" })
    </div>
</div>
<br />

<table id="table_id"
       class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>
                Mã chức vụ
            </th>
            <th>
                Tên chức vụ
            </th>
            <th>
                Thời gian thử việc
            </th>
            <th>
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaCV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenChucVu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianThuViec) ngày
                </td>
                <td>
                    <a>
                        @Html.ActionLink("Sửa", "SuaChucVu", new { id = item.MaCV })
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>|
                    <a>
                        @Html.ActionLink("Chi tiết", "ChitietChucVu", new { id = item.MaCV })
                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').dataTable();
        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.js"></script>

}
@section css
{
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet"
          href="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.css">

}

