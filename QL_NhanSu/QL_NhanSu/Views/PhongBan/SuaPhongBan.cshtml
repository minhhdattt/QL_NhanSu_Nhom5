@model QL_NhanSu.Models.PhongBan

@{
    ViewBag.Title = "Sửa phòng ban";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Sửa phòng ban</h1>
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaPB)
        <div class="form-group">
            <label class="control-label col-md-3">Mã phòng ban: </label>
            <div class="col-md-6">
                <div style="font:18px; padding: 5px 0 0 5px">
                    @Model.MaPB
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Tên phòng ban: </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Về trang quản lý phòng ban", "PhongBan")
</div>
