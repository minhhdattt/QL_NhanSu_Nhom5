@model IEnumerable<QL_NhanSu.Models.PhongBan>

@{
    ViewBag.Title = "Quản lý Phòng Ban";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="col-lg-12">
        <h1 class="page-header">Phòng ban</h1>
    </div>   
}

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Tạo mới", "ThemPBmoi", "PhongBan", new { @class = "btn btn-primary" })
    </div>
</div>
<br />

<table id="table_id"
       class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>
                Mã phòng ban
            </th>
            <th>
                Tên phòng ban
            </th>
            <th>
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaPB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenPhongBan)
                </td>
                <td>
                    <a>
                        @Html.ActionLink("Sửa", "SuaPhongBan", new { id = item.MaPB })
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>|
                    <a>
                        @Html.ActionLink("Xóa", "XoaPhongBan", new { id = item.MaPB })
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
