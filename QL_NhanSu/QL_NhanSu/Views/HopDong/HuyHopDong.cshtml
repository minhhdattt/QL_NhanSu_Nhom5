@model QL_NhanSu.Models.HopDongTD

@{
    ViewBag.Title = "HuyHopDong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    <div class="page-header">
        <h1> Hủy hợp đồng</h1>
    </div>
}

<h3>Bạn có chắc chắn muốn hủy hợp đồng này</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã hợp đồng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaHD)
        </dd>

        <dt>
            Ngày lập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngay)
        </dd>

        <dt>
            Thời hạn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThoiHan) tháng
        </dd>

        <dt>
            Loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Hủy hợp đồng" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "HopDong")
        </div>
    }
</div>
